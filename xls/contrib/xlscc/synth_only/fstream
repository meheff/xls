#ifndef __FSTREAM__
#define __FSTREAM__

#include <istream>
#include <ostream>

namespace std {

typedef basic_ostream<char> ofstream;
typedef basic_istream<char> ifstream;

class fstream : public basic_istream<char>, basic_ostream<char> {
};

}  // namespace std

#endif  // __FSTREAM__
